<h1 style="font-weight:100"><%=@language.name%> Snippets</h1><hr>

<ul class="list-group">
  <%@language.snippets.each do |snippet|%>
    <li class="list-group-item">
      <%if snippet.category && !snippet.category.empty? && !snippet.category.include?("Options") %>
        <span class="badge">
          <%=snippet.category%>
        </span>
      <%end%>
    <%=link_to snippet.title, snippet_path(snippet)%>
    </li>
  <%end%>
</ul>


<%=link_to "Back", root_path%>




