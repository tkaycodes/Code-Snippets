<%if @snippet.errors%>
<ul>
  <%@snippet.errors.full_messages.each do |x|%>
  <li><%=x%></li>
  <%end%>
</ul>
<%end%>

<%=form_for @snippet, class:"form-group" do |s|%>
  <%=s.label :language%>

  <!-- in the params hash, everything gets passed to s (object).language_id (method) -->
  <!-- Language.all is the collection, :id is the value of each in collection -->
  <!-- name is the name in each in collection -->
  <!-- first argument is s.language_id its value comes from everything that follows: -->
  <%=s.collection_select :language_id, Language.all, :id, :name, {:prompt=>true}, {class: "form-control"}%>
    <%=s.label :category%>
    <%=s.collection_select :category, [], [], [], {:prompt=>"Optional - eg. Rails"}, class: "form-control"%>
  <!-- <select class="form-control"> -->
    <!-- <option name=":category">Ruby</option> -->
  <!-- </select> -->
  <%#=s.text_field :category, class: "form-control", placeholder: "eg. Rails "%><br><br>
  <%=s.label :title%>
  <%=s.text_field :title, class: "form-control"%>
  <%=s.label :body%>
  <%=s.text_area :body, class: "form-control", placeholder: "Enter your code/snippet here"%><br><br>
  <%=s.label :notes%>
  <%=s.text_field :notes, class: "form-control", placeholder: "Enter any note(s) here - optional"%><br>
  <%=s.submit "Save Snippet", class: "btn btn-primary btn-sm"%>
<%end%><br>

<%=link_to "Back", root_path%>

   





